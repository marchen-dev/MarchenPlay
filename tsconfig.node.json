{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "types/**/*.d.ts",
    "src/shared/src/**/*", "src/renderer/src/lib/calc-file-hash.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@pkg": ["./package.json"],
      "@renderer/*": ["src/renderer/src/*"],
      "@main/*": ["src/main/*"]
    }
  }
}
