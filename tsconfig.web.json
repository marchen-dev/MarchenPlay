{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/src/**/*",
    "src/main/lib/*",
    "src/main/windows/*",
    "src/main/tipc/**/*",
    "src/main/modules/**/*",
    "src/main/types/**/*",
    "src/main/constants",
    "types/**/*.d.ts",
    "src/env.ts"
, "src/main/types/ffmpeg-custom.d.ts"  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noUnusedLocals": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@main/*": ["src/main/*"],
      "@pkg": ["./package.json"]
    },
    "types": ["@hrgui/libass-wasm-ts"]
  }
}
